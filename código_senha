#include <Keypad.h>
#include <LiquidCrystal.h>

LiquidCrystal lcd (A0,A1,A2,A3,A4,A5);

String senha  = "1212";
String buf = "";
int i = 0 ;
const byte ROWS = 4;
const byte COLS = 4;
char keys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'},
};
byte rowPins[ROWS] = {11,10,9,8};
byte colPins[COLS] = {7,6,5,4};

Keypad keypad = Keypad(makeKeymap(keys),rowPins, colPins,ROWS,COLS);


void setup (){
  pinMode (2,OUTPUT);
  lcd.begin (16,2);
  lcd.print ("INICIANDO");
  delay (1000);
  lcd.setCursor (0,0);
  lcd.print ("Pressione *      ");
}

void loop(){
  char key = keypad.getKey();

  if(key!= NO_KEY){
    if(key == '*' ){
      i= 0;
      lcd.clear();
      buf="";
      password();
  }
 }
}

void password(){

  while (i<4){
    lcd.setCursor (0,0);
    lcd.print ("SENHA: ");

    char key = keypad.getKey();
    if(key != NO_KEY) {
      buf+= key;
      lcd.print(buf);
      i++;
  }
 }

   if(buf == senha){
  lcd.setCursor(0,1);
  lcd.print("SENHA OK");
  analogWrite (3,0);
  digitalWrite(2,1);
  delay(1000);
  digitalWrite (2,0);
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print ("Pressione *     ");
}
else {
  lcd.setCursor(0,0);
  lcd.print ("Pressione *   ");
  lcd.setCursor(0,1);
  lcd.print ("SENHA INCORRETA");
  analogWrite(3,120);
  digitalWrite(2,0);
  }
}
